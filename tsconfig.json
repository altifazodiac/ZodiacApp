{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", // For React Native projects
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
   
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "expo-fast-image.d.ts", "src/**/*",
    "declarations.d.ts"
  ]
}